<%- include('partials/header') -%>
  <h1>Compose</h1>
  <form method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="postTitle" value="<%= locals.title%>">
    </div>
    <div class="form-group">
      <label for="post">Body</label>
      <input type="text" class="form-control" id="post" name="postBody" value="<%= locals.body%>">
    </div>
    <button type="submit" class="btn btn-default">Compose</button>
  </form>

  <%- include('partials/footer') -%>